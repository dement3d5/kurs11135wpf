<Page x:Class="kurs11135.Product1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kurs11135"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Product">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <ListView Grid.Row="1"> 
            <!--ItemsSource="{Binding ZakazisBySelectedList}"-->  
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Изображение"/>
                    <!--DisplayMemberBinding="{Binding Pod}"-->
                        <GridViewColumn Header="Название Товара"/>
                        <!--DisplayMemberBinding="{Binding Dtdestination}"-->
                            <GridViewColumn Header="Описание(Краткое)"/>
                            <!--DisplayMemberBinding="{Binding Destination}"-->
                                <GridViewColumn Header="Категория"/>
                                <!--DisplayMemberBinding="{Binding Dtincome}"-->
                    <GridViewColumn Header="Стоимость"/>
                    <!--DisplayMemberBinding="{Binding Price}"-->
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal">
            <Button Command="{Binding AddProduct}" Content="Добавить" />
            <Button Content="Редактировать"/>
            <Button Content="Удалить"/>
        </StackPanel>

    </Grid>
</Page>
