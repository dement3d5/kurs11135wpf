<Page x:Class="kurs11135.Order1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kurs11135"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Order">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>


    </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding ListOrdersStatus}" SelectedItem="{Binding OrderStatus}" Grid.Row="2">

            <ListView.View >
                <GridView>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Command="{Binding AddOrder}" Content="Добавить"/>
            <Button Content="Редактировать"/>
            <Button Content="Удалить"/>
        </StackPanel>
    
   
    </Grid>
    
</Page>
